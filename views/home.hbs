<div class="search">
  <form method="GET" action="/">
      <input type="text" name="exerciseQuery" placeholder="Find exercise...">
      <input type="submit" value="submit">  
  </form>
</div>

<div class="grid">
{{#each exercises as |exercise|}}
    <div class="icon">
      <a href="https://lifting-log.herokuapp.com/log-{{normalize exercise.name}}">
      <img src="{{exercise.icon}}" class="grid-item"/>
      <div class="pt-1">
        <span>{{exercise.name}}</span>
      </div>
      </a>
    </div>
{{/each}}
</div>
